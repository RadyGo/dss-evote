<h1>Listing ballots</h1>

<table>
  <tr>
	<th>Description</th>
    <th>Status</th>
    <th>Deadline</th>
    <th>No. Questions</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @ballots.each do |ballot| %>
  <tr>
	<td><%= ballot.description %></td>
    <td><%= ballot.status %></td>
    <td><%= ballot.deadline %></td>
    <td><%= ballot.questions.count %></td>
    <td><%= link_to 'Show', ballot %></td>
    <td><%= link_to 'Edit', edit_ballot_path(ballot) %></td>
    <td><%= link_to 'Destroy', ballot, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

